<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dearjacky.SelectIntensity"
    tools:deviceIds="wear_square"
    android:orientation="vertical"
    android:id="@+id/relative_layout"
    android:background="@color/colorCalmBackground">

    <android.support.wearable.view.WearableHeaderTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:text="Intensity"/>

    <Button
        android:layout_marginTop="62dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/value_text"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/plus"
        android:text="+"
        android:id="@+id/add_value"/>

    <Button
        android:layout_toLeftOf="@+id/value_text"
        android:layout_marginTop="62dp"
        android:layout_marginRight="20dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/minus"
        android:id="@+id/sub_value"/>
    <TextView
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_white"
        android:text="3"
        android:textSize="50sp"
        android:id="@+id/value_text"/>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/cancel"
        android:id="@+id/cancel_button" />
    <Button
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/confirm"
        android:id="@+id/confirm_button" />
</RelativeLayout>
