<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseMood"
    tools:deviceIds="wear_square"
    android:orientation="vertical"
    android:background="@drawable/mood_changer">

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/excited"
        android:gravity="center_vertical|center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_margin="28dp"
        android:visibility="visible"
        android:id="@+id/mood_happy"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/happy"
        android:id="@+id/mood_ok"
        android:layout_margin="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/depressed"
        android:id="@+id/mood_sad"
        android:layout_margin="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/angry"
        android:id="@+id/mood_angry"
        android:layout_margin="28dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
